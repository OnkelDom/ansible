[Unit]
Description=Tautulli - Stats for Plex Media Server usage
Wants=network-online.target
After=network-online.target

[Service]
ExecStart=/opt/tautulli/Tautulli.py --config /home/{{ bundle_mediaserver.config.user }}/.config/tautulli/config.ini --datadir /opt/tautulli --quiet --daemon --nolaunch
GuessMainPID=no
Type=forking
User={{ bundle_mediaserver.config.user }}
Group={{ bundle_mediaserver.config.user }}

[Install]
WantedBy=multi-user.target
