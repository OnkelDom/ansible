[Unit]
Description=rClone - Google Cabas Cache Crypt HTTP
Documentation=http://rclone.org/docs
After=network-online.target plexdrive.service plexcrypt.service

[Service]
Type=simple
User={{ bundle_mediaserver.config.user }}
Group={{ bundle_mediaserver.config.group }}
ExecStart=/usr/bin/rclone --config "/home/{{ bundle_mediaserver.config.user }}/.config/rclone/rclone.conf" serve http --read-only --bwlimit 20M --cache-db-path "/home/{{ bundle_mediaserver.config.user }}/.config/rclone/rclone-http.cache" --dir-cache-time 60m --vfs-cache-max-age 3h --vfs-cache-mode minimal --exclude backup/** --vfs-cache-poll-interval 30m --addr {{ bundle_mediaserver.config.rclone_http_addr }} --user {{ bundle_mediaserver.config.rclone_http_user }} --pass {{ bundle_mediaserver.config.rclone_http_pass }} gdrive-crypt:
Restart=on-abort
RestartSec=5
StartLimitInterval=60s
StartLimitBurst=3

[Install]
WantedBy=multi-user.target
